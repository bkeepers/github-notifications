html, body {
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: header-color; // For iOS 7 status bar
  background-image: linear-gradient(to bottom, #fff 0%, #fff 100%); // For iOS 7 body while loading
}

#app {
  @media screen and (min-width: 768px) {
    margin: 0 18px;
  }
}

.container {
  overflow: hidden;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.pane {
  position: absolute;
  overflow: hidden;
  top: 0;
  bottom: 0;

  & > header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: header-height;
    z-index: 4;
  }

  .content {
    position: absolute;
    top: header-height;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: auto;

    @media screen and (min-width: 768px) {
      padding: 18px;
    }
  }
}

@media screen and (min-width: 768px) {
  #lists {
    left: 0;
    width: 216px;
  }

  #threads {
    left: 216px;
    width: 324px;
  }

  #details .pane {
    left: 540px;
    right: 0;
  }
}

@media screen and (max-width: 767px) {
  .pane {
    left: 0;
    right: 0;

    & > header {
      position: fixed;
    }

    & > .content {
      -webkit-overflow-scrolling : touch;
    }
  }

  #lists {
    z-index: 1;
  }

  #threads {
    z-index: 2;
  }

  #details .pane {
    z-index: 3;
    transition: transform 250ms ease;
    transform: translateX(105%); // 105 to push the shadow of the screen

    &.focused {
      transform: translateX(0);
    }
  }
}
