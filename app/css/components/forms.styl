// Mostly stolen from GitHub.com
input[type="text"],
input[type="password"],
input[type="email"],
input[type="number"],
input[type="tel"],
input[type="url"],
textarea {
  min-height: 34px;
  padding: 7px 8px;
  outline: none;
  color: #333;
  background-color: #fff;
  background-repeat: no-repeat; // Repeat and position set for form states (success, error, etc)
  background-position: right center;
  border: 1px solid #ccc;
  border-radius: 2px;
  box-shadow: inset 0 1px 2px rgba(0,0,0,.075);
  vertical-align: middle;

  &.focus,
  &:focus {
    border-color: #51a7e8;
    box-shadow: inset 0 1px 2px rgba(0,0,0,.075), 0 0 3px rgba(81,167,232,.5);
  }

  &.invalid {
    border-color: brand-red;
  }

}

// Custom styling for HTML5 validation bubbles (WebKit only)
::-webkit-input-placeholder,
:-moz-placeholder { color: #aaa; }

input.fullwidth, textarea {
  display: block;
  width: 100%;
}

textarea {
  min-height: 100px;
  max-height: 500px;
  padding: 10px;
  resize: vertical;
}

.form-actions {
  margin-top: 9px;
  text-align: right;
}

.comment-and-button { display: none; }

.commenting {
  .comment-and-button { display: inline-block; }
  .no-comment-button { display: none; }
}
