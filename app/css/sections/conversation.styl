@keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

.conversation-item {
  animation: fadein 0.3s;

  @media only screen and (min-width: 768px) {
    margin: 9px 9px 9px 54px;
  }

  .author {
    color: inherit;
    text-decoration: none;
    font-weight: bold;
  }

  &:focus {
    outline: none;
  }

  .avatar {
    vertical-align: middle;
    border-radius: 2px;
    margin-right: 5px;
  }
}

.conversation-comment {
  .avatar {
    float: left;
    margin-left: -64px;
    width: 36px;
    height: 36px;
  }

  a {
    text-decoration: none;
  }

  @media only screen and (min-width: 768px) {
    border-radius: 2px;
    border: 1px solid #eee;

    &.selected {
      border: 1px solid #51a7e8;
      box-shadow: inset 0 1px 2px rgba(0,0,0,.075), 0 0 3px rgba(81,167,232,.5);
    }
  }

  @media only screen and (max-width: 767px) {
    border-bottom: 1px solid #f1f1f1;
  }

  &.collapsed {
    .conversation-content { display: none; }
  }
}

.conversation-meta {
  padding: 0 18px;
  line-height: 36px;
  vertical-align: middle;
  position: relative;
  cursor: pointer;

  time {
    float: right;
  }
}

.conversation-content {
  padding: 9px 18px;
}

.conversation-banner {
  padding: 18px 18px 18px 54px;
  margin: 0;

  @media only screen and (max-width: 767px) {
    border-bottom: 1px solid #f1f1f1;
  }

  .conversation-event {
    margin: 0;
  }

  .conversation-summary {
    margin: 0;
    display: inline;
  }
}

.conversation-title {
  margin-top: 0;
  margin-bottom: 10px;
  font-weight: normal;
  line-height: 1.1;
  word-wrap: break-word;
  font-size: 28px;

  a {
    color: inherit;
    text-decoration: none;
  }

  .issue-number {
    color: #aaa;
    font-weight: 300;
    letter-spacing: -1px;
  }
}

.conversation-banner-meta {
  line-height: 30px;
}

.conversation-event {
  color: #666;
  padding: 9px;

  .avatar {
    width: 16px;
    height: 16px;
    float: none;
    margin-top: 0;
  }
}

.conversation-event-hidden {
  display: none;
}

.conversation-item-icon {
  width: 30px;
  height: 30px;
  margin-right: 7px;
  line-height: 30px;
  color: #666666;
  text-align: center;
  background-color: #f3f3f3;
  border-radius: 50%;

  .conversation-event-merged & {
    color: #fff;
    background-color: git-merge-color;
  }

  .conversation-event-closed & {
    color: #fff;
    background-color: issue-closed-color;
  }

  .conversation-event-reopened & {
    color: #fff;
    background-color: issue-opened-color;
  }
}

.state-indicator {
  display: inline-block;
  padding: 0 5px;
  line-height: 24px;
  top: -4px;
  color: #fff;
  border-radius: 2px;
  padding: 4px 8px;
  margin-right: 8px;
  line-height: 20px;

  &.open { background-color: issue-opened-color; }
  &.closed { background-color: issue-closed-color; }
  &.merged { background-color: git-merge-color; }
  .octicon { color: #fff; }
}

.error-message {
  font-weight: bold;
  padding: 4px 8px;
  color: #900;
  border: 1px solid #ECC;
  background: #FFEAEA;
  border-radius: 2px;
  margin-bottom: 9px;
  display: none;

  .error & { display: block; }
}

.git-ref {
  position: relative;
  display: inline-block;
  padding: 0 5px;
  border-radius: 3px;
  font: 10px/20px Monaco, "Liberation Mono", Courier, monospace;
  color: #336479;
  white-space: nowrap;
  vertical-align: middle;
  background-color: #e8f0f8;
}

.git-sha {
  color: #000;
  font-weight: bold;
  font-family: Consolas, "Liberation Mono", Courier, monospace;
  font-size: 12px;
  text-decoration: none;
}
