#shortcuts {
  position: absolute;
  left: 50%;
  top: 20%;
  width: 400px;
  margin-left: -200px;
  background: rgba(#000,0.8);
  color: #fff;
  padding: 20px;
  border-radius: 2px;
  box-shadow: 0 0 10px rgba(#000,0.5), inset 0 0 1px #fff;

  h2 {
    margin: 0;
    margin-left: 80px;
  }

  dl {
    line-height: 2;
  }

  dt {
    float: left;
    width: 80px;
    text-align: right;
    padding-right: 18px;
  }
}
